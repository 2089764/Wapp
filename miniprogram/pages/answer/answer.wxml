<cu-custom bgColor="bg-gradual-blue" isBack="{{false}}">
    <view slot="content">答题</view>
</cu-custom>

<view class="cu-bar bg-white solid-bottom margin-lg padding-lg shadow">
    <view class='action'>
        <text class="text-black">{{tags+1}}/{{newArr.length}}.{{questions[newArr[tags]].title}}</text>
    </view>
</view>


<view wx:for='{{questions[newArr[tags]].options}}' wx:key='{{item.name}}'>
    <view data-index="{{index}}" data-value="{{item.value}}" data-checked="{{item.checked}}" class="{{item.checked==true?'checked':'bg-white'}} box round" bindtap="chooseAnswer">
        {{item.value}}、{{item.name}}
    </view>
</view>





<view class="flex justify-center padding-bottom-xl padding-top-xl">
    <button class="cu-btn round bg-blue shadow margin-right-lg" bindtap='beforeQuestion'>上一题</button>



    <button class="cu-btn bg-green shadow margin-left-lg margin-right-lg" bindtap="showModal" data-target="bottomModal">答题卡</button>

    <view class="cu-modal bottom-modal {{modalName=='bottomModal'?'show':''}}">
        <view class="cu-dialog">
            <view class="cu-bar bg-white">
                
                <view class="action text-blue" bindtap="hideModal">取消</view>
            </view>
            <view class="padding-xl">
                <view wx:for='{{cardArr}}' wx:key>
                    <view> {{item+1}}</view>
                </view>
            </view>
        </view>
    </view>



    <button class="cu-btn round bg-red shadow margin-left-lg" wx:if='{{btntag != 1}}' disabled="true">未交卷</button>
    <button class="cu-btn round bg-red shadow margin-left-lg" bindtap='submit' wx:else>交卷</button>
</view>