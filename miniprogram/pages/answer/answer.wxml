<cu-custom bgColor="bg-gradual-blue" isBack="{{true}}">
  <view slot="content">答题</view>
</cu-custom>


<view class="cu-bar bg-white solid-bottom margin">
  <view class='action'>
    <text class="cuIcon-title text-blue">{{questions[newArr[tags]].title}}</text>
  </view>
</view>

<view wx:for='{{questions[newArr[tags]].options}}' wx:key>
  <view class="bg-white padding-lg margin-xl radius">
    <text>{{item}}</text>
  </view>
</view>

<view class="flex justify-center padding-bottom-xl">
<button class="cu-btn round bg-blue shadow margin-right" bindtap='beforeQuestion'>上一题</button>
<button class="cu-btn round bg-red shadow margin-left" bindtap='nextQuestion'>下一题</button>
</view>

<view>
  <button bindtap='test'>测试</button>
</view>
