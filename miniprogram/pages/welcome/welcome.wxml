<cu-custom bgColor="bg-red" isBack="{{false}}">
  <view slot="content">云答题平台</view>
</cu-custom>

<scroll-view class='bg-red box'>
  <button class="cu-bar bg-white padding-xl margin-xl radius" bindgetuserinfo='userLogin' open-type='getUserInfo' wx:if='{{!avatarUrl}}'>
    <view class="cu-avatar round xl" style="background-image:url({{avatarUrl}});">
      <view class="cu-tag badge {{userInfo.gender%2==0?'cuIcon-female bg-pink':'cuIcon-male bg-blue'}}"></view>
    </view>
    <view>点击授权</view>
    <view class="arrow"></view>
  </button>

  <button class="cu-bar bg-white padding-xl margin-xl radius" bindtap="goIndex" wx:else>
    <view class="cu-avatar round xl" style="background-image:url({{avatarUrl}});">
      <view class="cu-tag badge {{userInfo.gender%2==0?'cuIcon-female bg-pink':'cuIcon-male bg-blue'}}"></view>
    </view>
      <view class="none">
        <text class="txt text-xl none">{{userInfo.nickName}}</text>
      </view>
    <view class="arrow"></view>
  </button>


</scroll-view>